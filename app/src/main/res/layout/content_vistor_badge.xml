<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.VisitorBadgeActivity"
    tools:showIn="@layout/activity_vistor_badge">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

   >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_visitor_badge_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/lable_visitor_tamplate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Visitor Badge Template"
            android:textColor="@color/primary_text" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView

        android:id="@+id/cardview_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_visitor_badge_lable"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.eighteentechnology.onlinegaurd.customview.RoundedImageView

                android:id="@+id/image_view_company_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_logo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"

                android:layout_margin="10dp"
                android:background="@color/primary_light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <com.eighteentechnology.onlinegaurd.customview.VerticalTextView
                    android:id="@+id/visitor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"

                    android:layout_marginLeft="10dp"
                    android:text="VISITOR "
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <com.eighteentechnology.onlinegaurd.customview.VerticalTextView
                    android:id="@+id/visit_day_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/visitor_name"
                    android:text="Today visits :1234"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view_verticale"
                    android:layout_width="2dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/visit_day_no"

                    android:background="@color/primary_light" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/view_verticale"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/visitor_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VISTOR NAME"
                        android:textColor="@color/primary_text"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/visitor_coming_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Oct 25 0.0 PM"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Company :Visitor Campany"

                        android:textColor="@color/primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/visitor_purpuse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Purpuse : Purpuse Of Visit"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/welcone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="20dp"
                        android:text="Welcome ,Visitor"
                        android:textColor="@color/primary_text"
                        android:textSize="20sp" />


                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_visitor_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_option"
        android:layout_marginTop="5dp"

        >

        <TextView
            android:id="@+id/lable_visitor_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="Option"
            android:textColor="@color/primary_text"
            android:textSize="14sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_visitor_welcome"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/cardview_visitor_option"

        android:layout_margin="5dp"
        android:background="@drawable/rounded_corner_view"

        >

        <TextView
            android:id="@+id/lable_visitor_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="Welcome ,Visitor"
            android:textColor="@color/primary_text"
            android:textSize="14sp" />

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_enable_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_visitor_welcome"

        android:layout_margin="5dp"
        android:background="@drawable/rounded_corner_view"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_centerInParent="true"

            android:id="@+id/lable_enable_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Enable Company Name"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_enable_purpuse_of_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_enable_company_name"

        android:layout_margin="5dp"
        android:background="@drawable/rounded_corner_view"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"

                android:id="@+id/lable_enable_purpuse_of_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Enable Purpose Of Visit"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_enable_date_and_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_enable_purpuse_of_visit"

        android:layout_margin="5dp"
        android:background="@drawable/rounded_corner_view"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"

                android:id="@+id/lable_enable_date_and_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Enable date and time in"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
</ScrollView>