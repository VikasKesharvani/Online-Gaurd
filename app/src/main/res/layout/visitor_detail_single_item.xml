<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="10dp"
        android:background="@android:color/transparent">
        <com.eighteentechnology.onlinegaurd.customview.RoundedImageView

            android:layout_marginTop="10dp"
            android:id="@+id/user_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vistor:-Amit"
            android:id="@+id/textView_vistor_name"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_alignTop="@+id/user_image"
            android:layout_toRightOf="@+id/user_image"
            android:layout_toEndOf="@+id/user_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Purpuse:-Interview"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:id="@+id/textView_visitor_purpuse"
            android:layout_alignTop="@+id/textView_vistor_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Host:-Vikas"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:id="@+id/textView_host_name"
            android:layout_below="@+id/textView_vistor_name"
            android:layout_alignLeft="@+id/textView_vistor_name"
            android:layout_alignStart="@+id/textView_vistor_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date:-06/06/2016"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:id="@+id/textView_date"
            android:layout_below="@+id/textView_visitor_purpuse"
            android:layout_alignRight="@+id/textView_visitor_purpuse"
            android:layout_alignEnd="@+id/textView_visitor_purpuse" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
